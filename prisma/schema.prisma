// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id               Int               @id @default(autoincrement())
  name             String
  createdAt        DateTime          @default(now())
  progress         Progress?
  sparringProgress SparringProgress?
  sparringAttempts SparringAttempt[]
}

model DailyPlan {
  id           Int        @id @default(autoincrement())
  date         String     @unique // YYYY-MM-DD format
  cycleCode    Int
  targetXp     Int
  isCompleted  Boolean    @default(false)
  completedXp  Int        @default(0)
  createdAt    DateTime   @default(now())
  tasks        DailyTask[]
}

model DailyTask {
  id           Int          @id @default(autoincrement())
  dailyPlanId  Int
  dailyPlan    DailyPlan    @relation(fields: [dailyPlanId], references: [id], onDelete: Cascade)
  type         String       // KNOWLEDGE | DRILL_JS | DRILL_TS | INTERVIEW
  title        String
  prompt       String
  xp           Int
  status       String       @default("TODO") // TODO | IN_PROGRESS | DONE
  completedAt  DateTime?
  createdAt    DateTime     @default(now())
  taskSession  TaskSession?
}

model XpLog {
  id        Int      @id @default(autoincrement())
  date      String   // YYYY-MM-DD format
  amount    Int
  reason    String
  createdAt DateTime @default(now())
}

model Progress {
  userId            Int      @id @default(1) @unique
  user              User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  totalXp           Int      @default(0)
  rank              String   @default("Mizunoto")
  currentCycleCode  Int      @default(1)
  streak            Int      @default(0)
  lastCompletedDate String?  // YYYY-MM-DD format
}

model MockRound {
  id          Int      @id @default(autoincrement())
  date        String   // YYYY-MM-DD format
  durationMin Int
  mode        String   // TIMED | UNTIMED
  score       Int      // 0-10
  notes       String?
  createdAt   DateTime @default(now())
}

model TaskSession {
  id              Int            @id @default(autoincrement())
  userId          Int            @default(1)
  dailyTaskId     Int            @unique
  dailyTask       DailyTask      @relation(fields: [dailyTaskId], references: [id], onDelete: Cascade)
  currentStepIndex Int           @default(0)
  status          String         // ACTIVE | ABANDONED | COMPLETED
  startedAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt
  stepStates      TaskStepState[]
}

model TaskStepState {
  id                Int          @id @default(autoincrement())
  sessionId         Int
  session            TaskSession @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  stepIndex          Int
  userAnswerText     String?
  userSelectedOption Int?
  isPassed           Boolean     @default(false)
  updatedAt          DateTime    @updatedAt

  @@unique([sessionId, stepIndex])
}

model SparringProgress {
  userId            Int      @id @default(1) @unique
  user              User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  totalPoints       Int      @default(0)
  unlockedRankIndex Int      @default(1)
  markPoints        Int      @default(0)
  lastQuestionId    Int?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
}

model SparringAttempt {
  id           Int      @id @default(autoincrement())
  userId       Int      @default(1)
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  date         String   // YYYY-MM-DD format
  rankIndex    Int      // 1..11
  question     String
  userAnswer   String
  aiScore      Float
  passed       Boolean
  pointsAwarded Int
  feedbackJson String
  createdAt    DateTime @default(now())
}
